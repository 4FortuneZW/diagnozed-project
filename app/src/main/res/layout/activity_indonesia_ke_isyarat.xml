<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.IndonesiaKeIsyaratActivity">

    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:text="Penerjemahan\nIndonesia ke Isyarat" />

    <EditText
        android:id="@+id/translate_input"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_32sdp"
        android:inputType="text"
        android:hint="@string/hint_translate_input"
        android:importantForAutofill="no"
        android:background="@drawable/background_input"
        android:padding="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:imeOptions="actionDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/search_vector" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/translate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="terjemah"/>

